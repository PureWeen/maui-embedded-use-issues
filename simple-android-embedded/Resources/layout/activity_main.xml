<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select an Example Issue"/>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="Basic Embdedded Issues (OnAppearing, Display Alerts): "/>
            <Button
                android:id="@+id/MainEmbeddedExampleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font Icon - Working When Recreating Maui Context: "/>
            <Button
                android:id="@+id/FontIconWorkExampleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font Icon - Failing When Accessing Existing Maui Context: "/>
            <Button
                android:id="@+id/FontIconFailExampleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="Grouped List - Wil Fail When Android is Own Project: "/>
            <Button
                android:id="@+id/GroupedListExampleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go"/>
        </LinearLayout>
</LinearLayout>