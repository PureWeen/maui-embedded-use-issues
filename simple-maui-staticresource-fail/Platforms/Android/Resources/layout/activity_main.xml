<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select an Example Issue"/>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Failing List: "/>
            <Button
                android:id="@+id/FailingListButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Working No List: "/>
            <Button
                android:id="@+id/WorkingNoListButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi Page Navigation: "/>
            <Button
                android:id="@+id/MultiPageNavigationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go"/>
        </LinearLayout>
</LinearLayout>